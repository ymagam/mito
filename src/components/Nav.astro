---
import Logo from "./Logo.astro";

const currentPath = Astro.url.pathname;
---

<nav class="nav">
  <a href="/" class="nav-brand">
    <Logo size="small" />
    <span>Mitochondros</span>
  </a>
  <div class="nav-links">
    <a href="/search" class:list={[{ active: currentPath === "/search" || currentPath === "/search/" }]}>Search</a>
    <a href="/about" class:list={[{ active: currentPath === "/about" || currentPath === "/about/" }]}>About</a>
    <a href="/rss.xml">RSS</a>
  </div>
</nav>

<style>
  .nav {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: var(--space-lg) 0;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-2xl);
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-heading);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    text-decoration: none;
    color: var(--color-text);
  }

  .nav-brand:hover {
    color: var(--color-accent);
  }

  .nav-brand:hover :global(.logo) {
    color: var(--color-accent-hover);
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
  }

  .nav-links a {
    font-family: var(--font-heading);
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    text-decoration: none;
  }

  .nav-links a:hover {
    color: var(--color-accent);
  }

  .nav-links a.active {
    color: var(--color-accent);
    font-weight: 500;
  }
</style>
